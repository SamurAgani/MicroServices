@using FreeCourse.Web.Models.Basket
@using FreeCourse.Web.Models.Orders
@{
    ViewData["Title"] = "Checkout";
}


@model CheckoutInfoInput
<form asp-controller="Order" asp-action="Checkout" method="post">
    <div class="row">
        <div class="col-md-8">
            <div class="card-title">
                <h5 class="card-title">
                    Address info
                </h5>
                <div class="mb-3">
                    <label asp-for="Province" class="form-label">

                    </label>
                    <input asp-for="Province" class="form-control" />
                </div>
                <div class="mb-3">
                    <label asp-for="District" class="form-label">

                    </label>
                    <input asp-for="District" class="form-control" />
                </div>

                <div class="mb-3">
                    <label asp-for="Street" class="form-label">

                    </label>
                    <input asp-for="Street" class="form-control" />
                </div>

                <div class="mb-3">
                    <label asp-for="ZipCode" class="form-label">

                    </label>
                    <input asp-for="ZipCode" class="form-control" />
                </div>

                <div class="mb-3">
                    <label asp-for="Line" class="form-label">

                    </label>
                    <input asp-for="Line" class="form-control" />
                </div>
                <h5 class="card-title">
                    Payment info
                </h5>

                <div class="mb-3">
                    <label asp-for="CardName" class="form-label">

                    </label>
                    <input asp-for="CardName" class="form-control" />
                </div>
                <div class="mb-3">
                    <label asp-for="CardNumber" class="form-label">

                    </label>
                    <input asp-for="CardNumber" class="form-control" />
                </div>
                <div class="mb-3">
                    <label asp-for="Expiration" class="form-label">

                    </label>
                    <input asp-for="Expiration" class="form-control" />
                </div>
            </div>
            <div class="mb-3">
                <label asp-for="CVV" class="form-label">

                </label>
                <input asp-for="CVV" class="form-control" />
            </div>
        </div>
        <div class="col-md-4">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Payment</h5>
                    <table class="table table-striped">
                        @foreach (var item in ViewBag.basket.BasketItems as List<BasketItemViewModel>)
                        {
                            <tr>
                                <td>
                                    @item.CourseName
                                </td>
                                <td>
                                    @item.Price
                                </td>
                            </tr>
                        }
                        <tr>
                            <td>@(ViewBag.basket.HasDiscount?"Discount price":"Price")</td>
                            <td>@ViewBag.basket.TotalPrice $</td>
                        </tr>
                    </table>
                    <button type="submit" class="btn btn-success">Make Payment</button>
                </div>
            </div>
        </div>
    </div>
</form>

