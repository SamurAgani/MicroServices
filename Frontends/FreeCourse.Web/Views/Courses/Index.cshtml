
@{
    ViewData["Title"] = "Index";
}
@model List<CourseVM>


<div class="row">
    <div class="coll-md-12">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Courses</h5>
                <a asp-controller="Courses" asp-action="Create" class="btn btn-primary mb-3">Create course</a>
                @if (Model != null)
{
        <table class="table table-striped table-bordered">
                    <thead>
                        <tr>
                            <th>
                                Photo
                            </th>
                            <th>
                                Name
                            </th>
                            <th>
                                Price
                            </th>
                            <th>
                                Time
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach(var item in Model)
                        {
                            <tr>
                                <td></td>
                                <td>@item.Name</td>
                                <td>@item.Price</td>
                                <td>@item.Feature.Duration</td>
                            </tr>
                        }
                    </tbody>
                    </table>
                }
                else
                {
                    <div class="alert alert-info">No course</div>
                }
            </div>
        </div>
    </div>
</div>

